<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userXml" class="com.jascola.spring.business.bo.UserBo">
       <property name="age" value="10" />
       <property name="petBo" ref="petXml" />
       <property name="name" value="linux" />
    </bean>

     <bean id="petXml" class="com.jascola.spring.business.bo.PetBo">
       <property name="age" value="1" />
        <property name="name" value="道和" />
    </bean>

</beans>